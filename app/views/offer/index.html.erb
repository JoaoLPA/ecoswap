<div class="container">
  <div class="row">

    <% @offers.each do |offer| %>
      <% if offer.available == true # && offer.material_id == 1 %>
        <div class="col-4">
          <div class="card" >
            <!-- <img src= class= "card-img-top" alt="..."> -->
            <%= image_tag('5.jpg', class: 'card-img-top') %>
            <div class="card-body">
              <h5 class="card-title"><%= offer.material.name %></h5>
              <p class="card-text"><%= offer.description %></p>
              <%= link_to "go to offer", offer_path(offer) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to "Create offer", new_offer_path %>
</div>

