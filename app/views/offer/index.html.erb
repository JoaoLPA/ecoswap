<div class="container">


  <div class="row mt-5">
      <div class="col-4 offset-4">
        <div class="mb-4">
           <%= link_to "Create offer", new_offer_path, class: "btn btn-dark d-block" %>
        </div>
      </div>
    <div class="col-8 offset-2">
      <%= render 'search_offer_form' %>
    </div>
  </div>


  <div class="row">

    <% @offers.each do |offer| %>
      <% if offer.available == true%>
        <div class="col-4">
          <div class="card" >
            <%= image_tag('5.jpg', class: 'card-img-top') %>
            <div class="card-body">
              <h5 class="card-title"><%= offer.material.name %></h5>
              <p class="card-text"><%= offer.description %></p>
              <%= link_to "go to offer", offer_path(offer) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>

